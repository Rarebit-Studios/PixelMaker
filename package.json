{
  "name": "pixel-maker",
  "version": "1.1.0",
  "description": "Pixel art editor with multiple export formats",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Reality Boffins",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.realityboffins.pixelmaker",
    "productName": "Pixel Maker",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon-512.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon-512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon-512.png"
    }
  }
} 